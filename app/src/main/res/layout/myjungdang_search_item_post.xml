<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorTextPrimary">

        <ImageView
            android:id="@+id/jungdang_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:background="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/jundang_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_toEndOf="@+id/jungdang_color"
            android:layout_toRightOf="@+id/jungdang_color"
            android:gravity="center_vertical"
            android:text="이름장소"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/jundang_name"
            android:layout_toRightOf="@+id/jundang_name"
            android:gravity="center_vertical"
            android:text="제목이 들어갈 장소입니다"
            android:textColor="@color/colorText"
            android:textSize="20dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>