<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_jungdang_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="115dp"
        >

        <LinearLayout
            android:id="@+id/text_myjungdang"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="내 정당"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/search_jungdang"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="정당 탐색"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_myjungdang"
            android:layout_width="fill_parent"
            android:layout_height="7dp"
            android:layout_below="@id/text_myjungdang"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/colorSelect" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <Button
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:background="@drawable/item_bg_2"
            android:id="@+id/makingJundang"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="정당만들기"
            android:layout_below="@+id/relativeLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_myjungdang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout3">

            <LinearLayout
                android:id="@+id/lin"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="이런"
                    android:textColor="@color/colorText"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="! 아직 정당이 없으시군요!"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />
            </LinearLayout>


            <TextView
                android:layout_below="@+id/lin"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:text="정당 탐색 메뉴를 클릭하여 정당에 가입하시거나,"
                android:textColor="@color/colorText"
                android:textSize="17dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout3"
            android:layout_centerHorizontal="true"
            android:text="정당만들기 버튼을 이용해 정당을 만들어보세요!"
            android:textColor="@color/colorText"
            android:textSize="17dp" />

